<!DOCTYPE html>
<html lang="en">
    <head>
        <%- include('../partials/head') %>
        <title>Detalle del producto</title>
    </head>
    <body>
        <%- include('../partials/header') %>

        <main class="contenedor-producto">
            <table class="listado-productos">
                <thead>
                    <th>Imagen</th>
                    <th>Producto</th>
                    <th>Precio</th>
                    <th>Opciones</th>
                </thead>
                <tbody>
                <% for(let producto of productos){ %>
                    <tr>
                        <td> <img src="<%= producto.imagen%>" alt=""></td>
                        <td><%= producto.nombre %> </td>
                        <td>$<%= producto.precio %> </td>
                        <td class="opciones"><a href="/<%= producto.id %>" class="mostrar">Mostrar</a> <a href="delete/<%= producto.id %>" class="delete">Delete</a></td>
                    </tr>
                <% } %>
                </tbody>
            </table>
        </main>

        <%- include('../partials/footer') %>
    </body>
</html>
