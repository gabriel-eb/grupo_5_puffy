<head>
    <%- include('../../partials/head') %>
    <title>Libreta de Direcciones</title>
</head>
<body>

    <%- include('../../partials/header') %>
    <main>
        <h1 style="text-align: center;">Direcciones</h1>
        <div class="btn-add-address">
            <button class="btn" onclick="window.location.href='/users/<%= sessionId %>/newAddress'">Agregar</button>
        </div>
        <section class="address-card-area">
            <% addresses.map((address, index) => { %>
                <article class="address-card">
                    <h3>DirecciÃ³n <%= index + 1 %>:</h3>
                    <h4><%= address.line1 %></h4>
                    <p><%= address.line2 %></p>
                    <p>C.P.: <%= address.zip %></p>
                    <p><%= address.city %>, <%= address.state %></p>
                    <div class="btn-perfil">                 
                        <button class="btn modificar"
                            onclick="window.location.href='/users/<%= sessionId %>/addresses/<%= address.id %>'">Editar</button>
                        <form action="/users/<%= sessionId %>/addresses/<%= address.id %>?_method=DELETE" method="post">
                            <button class="btn eliminar" type="submit">Eliminar</button>
                        </form>
                    </div>
                </article>
                <% }) %>
        </section>
    </main>

    <%- include('../../partials/footer') %>
</body>