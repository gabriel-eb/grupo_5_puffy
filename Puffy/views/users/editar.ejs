<!DOCTYPE html>
<html lang="en">
<head>
    
    <title>Document</title>
</head>
<body>
   
        <%- include('partials/header') %>

        <main class="form">
            <h3>CREAR CUENTA</h3>
            <form action="/users" method="post" enctype="multipart/form-data">
            <div class="container_01">
                <input name="first_name" type="text" class="fill" placeholder="Nombre" />
                <input name="last_name" type="text" class="fill" placeholder="Apellido" />
                <br />
                    <label for="userType" class="bold" >Tipo de usuario: </label>
                    <select name="category" id="userType" class=fill>
                        <option value="0">Vendedor</option>
                        <option value="1">Comprador</option>
                    </select>
                    <br />
                <input
                    name="email"
                    type="email"
                    class="fill"
                    placeholder="Correo electrónico"
                />
                <input name="password" type="password" class="fill" placeholder="Contraseña" />
                <!-- <input
                    type="password"
                    class="fill"
                    placeholder="Confirmar contraseña"
                /> -->
                <label for="image" class="bold" >Imagen de perfil:</label>
                <input type="file" name="image" id="image" class="fill" />

            </div>

            <div class="button_01">
                <input type="submit" value="GUARDAR" />
            </div>


        </form>
        </main>

        <%- include('partials/footer') %>
    </body>

</html>