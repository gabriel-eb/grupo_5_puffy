<!DOCTYPE html>
<html lang="en">
    <head>
        <%- include('partials/head') %>
        <title>Listo para realizar tu pedido</title>
    </head>
    <body>
        <%- include('partials/header') %>

        <main class="carrito">
            <h1 class="fuente-may">Carrito</h1>
            <section class="lista-productos">
                <% finalProducts.map((producto) => { %>
                <div class="postre">
                    <h2 class="fuente-may"><%= producto.name %></h2>
                    <div class="imagen">
                        <img
                            src=<%= producto.url%>
                            alt="imagen chocoflan"
                        />
                    </div>
                    <div class="cantidad">
                    </div>
                    
                        <a href="/users/<%= userCart.userId %>/carrito/<%=idCarrito%>?idProduct=<%=producto.id %>">Eliminar</a>

                    <div>
                    <p class="subtotal bold" id="subtotal">Subtotal: $ <%= producto.price %></p>
                    </div>
                    <input
                        class="nota"
                        type="text"
                        name="eliminar"
                        placeholder="Agrega una nota aquí para la tienda..."
                        id="eliminar"
                    />
               
                </div>

                <% }) %>
            </section>


            <section class="total">
                <div class="grupo">
                    <p>Subtotal( <%= count %> producto(s)):</p>
                    <p>$ <%= totalPrice %> mxn</p>
                </div>
                <div class="grupo">
                    <p>Envío:</p>
                    <p>$ 65 mxn</p>
                </div>
                <div class="grupo">
                    <p>Total:</p>
                    <div class="precio-total">
                        <p>$ <%= totalPrice + 65 %> mxn</p>
                        <p class="gris">IVA INCLUIDO</p>
                    </div>
                </div>
                <form action="/users/<%= userCart.userId  %>/carrito?_method=PUT" method="post">
            
                    <input class="boton" type="submit" value="Realizar compra" />
                </form>
            </section>
            <hr />
        </main>
        <%- include('partials/footer') %>
    </body>
</html>
